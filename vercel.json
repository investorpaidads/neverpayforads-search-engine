{
  "version": 2,
  "builds": [
    {
      "src": "src/app/api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "public/data/*.json"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/data/(.*)", "dest": "/public/data/$1" },
    { "src": "/api/(.*)", "dest": "/src/app/api/$1.ts" }
  ]
}
