export async function getBankLogoByBIN(cardNumber: string) {
  if (!cardNumber) return null;

  const bin = cardNumber.substring(0, 6); // first 6 digits

  try {
    const res = await fetch(`https://lookup.binlist.net/${bin}`);
    if (!res.ok) return null;

    const data = await res.json();

    // Try to get logo from API
    if (data?.bank?.logo) {
      return data.bank.logo;
    }

    // Fallback: use bank name + your existing logo function
    if (data?.bank?.name) {
      const { getBankLogo } = await import("./bank-logos");
      return getBankLogo(data.bank.name, null);
    }

    return null;
  } catch {
    return null;
  }
}
