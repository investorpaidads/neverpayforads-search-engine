import { getBankLogo } from "./bank-logos";
export async function getBankLogoByBIN(cardNumber: string) {
  if (!cardNumber) return null;

  const bin = cardNumber.substring(0, 6);

  try {
    const res = await fetch(`https://lookup.binlist.net/${bin}`, {
      cache: "no-store",
    });

    if (!res.ok) return null;

    const data = await res.json();

    if (data?.bank?.logo) {
      return data.bank.logo;
    }

    if (data?.bank?.name) {
      return getBankLogo(data.bank.name, null);
    }

    return null;
  } catch (error) {
    if (error instanceof Error) {
      console.error("BIN Lookup error:", error.message);
    } else {
      console.error("BIN Lookup unknown error:", error);
    }
    return null;
  }
}
